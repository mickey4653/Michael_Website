---
import { Icon } from "astro-icon";
const navLinks = [
    {
        name: 'Home',
        url: '/',
        style: 'transparent',
    },
    {
        name: 'About Me',
        url: '/aboutme',
        style: 'transparent',
    },
    {
        name: 'API',
        url: '/api',
        style: 'transparent',
    },
    {
        name: 'Contact',
        url: '/contact',
        style: 'transparent',
    },
    {
        name: 'Download Resume',
        url : 'src/resume/Updated Resume 4v1.pdf',
        style: 'primary',
    },
];
---

<nav>
<div class="container nav-container">
        
<a href="/"><Icon name = "Logo", width={225} class="logo" /></a>
<div class="nav-wrapper">
    <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open Mobile Nav">
        <Icon name="fe:bar" width={35} />
    </button>
    <ul class="nav-links" role="navigation">
        {
            navLinks.map((link, index) => (
                <li role="none">
                    {index === navLinks.length - 1 ? (
                        <a href={link.url} download="src/resume/Updated Resume 4v1.pdf" class={`btn btn--${link.style} nav-link`}>
                        {link.name}
                    </a>
                    ) : (
                    <a href={link.url} class={`btn btn--${link.style} nav-link`}>
                        {link.name}
                    </a>
                    )}
                    
                </li>
            ))
        }
    </ul>
</div>
</div>
</nav>
<script>
    const navBtn = document.querySelector('#menu-btn');
    navBtn.addEventListener('click', ()=>{
        navBtn.setAttribute('aria-expanded', 
        navBtn.getAttribute('aria-expanded') === 'false'
         ? 'true': 'false');
        })
</script>