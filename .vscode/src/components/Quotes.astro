---
import data from '../data/quotes.json';
---

<section class="quotes container-sm">
    {
        data.map(quote =>(
        <div class="text-scale"><div class="element">{quote.topic}</div></div>
    <div class="text-scale">
    <p class="text-wrapper">{quote.content1}</p>
    <p class="text-wrapper">{quote.content2}</p>
    </div>
        ))
       
    }
</section>